FROM mcr.microsoft.com/dotnet/sdk:5.0 AS build
WORKDIR /src
# COPY microservices/*.sln .
COPY microservices/UrlShortner/UrlShortner.csproj ./UrlShortner/UrlShortner.csproj
RUN dotnet restore UrlShortner
COPY microservices/UrlShortner UrlShortner/

RUN dotnet publish -c release -o /app UrlShortner/UrlShortner.csproj

FROM mcr.microsoft.com/dotnet/aspnet:5.0
WORKDIR /app
COPY --from=build /app .
ENTRYPOINT ["dotnet", "UrlShortner.dll", "--urls=http://0.0.0.0:5000"]
